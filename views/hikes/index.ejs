<%- include("../partials/header") -%>
<div class="container">
<div class="jumbotron">
  <h1 class="display-3"><i class="fas fa-hiking"></i> Welcome to Great Hikes</h1>
  <p>Better than a treadmill!</p>
</div>
</div>
<div class="container text-center" id="index">
  
  <div class="row">
    <% for (let hike of hikes) { %>

    <div class="col-md-5 col-lg-3  mr-4 ml-4 text-center">
      <div class="card mb-4" style="width: 300px;">
      <img class="card-img-top" style="width: 300px;" src="<%= hike.image[0] %>" />
      <div class="card-body">
      <h4 class="card-title"><%= hike.name %></h4>
      
      <p class="card-text"><%= hike.description.substring(0, 50) + "... " %><span></span><a href="/hikes/<%= hike._id %>"> Read More</a></span></p>
      </div>
      </div>
    </div>

    <% } %>
  </div>
</div>

<%- include("../partials/footer") -%>
