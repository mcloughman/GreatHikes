<%- include("../partials/header") -%>
<div class="container">
<div class="jumbotron">
  <h1 class="display-3"><i class="fas fa-hiking"></i> Welcome to Great Hikes</h1>
  <p>Better than a treadmill!</p>
</div>
</div>
<div class="container">
  
  <div class="row">
    <% for (let hike of hikes) { %>

    <div class="col-md-4 col-lg-3 text-center">
      <div class="card mb-4">
        <img class="card-img-top" src="<%= hike.image[0] %>" />
        <div class="card-body">
          <h4 class="card-title"><%= hike.name %></h4>
          <p class="card-text"><%= hike.description.substring(0, 50) + "... " %><span></span><a href="/hikes/<%= hike._id %>"> Read More</a></span></p>
        </div>
      </div>
    </div>

    <% } %>
  </div>
</div>

<%- include("../partials/footer") -%>
